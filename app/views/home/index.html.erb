<section id="inns">
  <% if host_signed_in? && Inn.all.where(host_id: current_host.id).empty?%>
    <% controller.redirect_to(new_inn_path) %>
  <% else %>
    <h2>Pousadas</h2>
    <% @inns.each do |inn| %>
      <div>
        <h3><%= link_to(inn.brand_name, inn) %></h3>
        <h4><%= inn.description %></h4>
        <dl>
        <dt>Endereço:</dt>
        <dd><%= inn.address %> - <%= inn.neighborhood %>. <%= inn.city %> - <%= inn.state %></dd>
        <dt>Telefone:</dt>
        <dd><%= inn.phone_number %></dd>
        <dt>Quartos Disponíveis:</dt>
        <dd><%= @rooms.where(inn_id: inn.id).length %></dd>
        </dl>
      </div>
    <% end %>
    
    <% if @inns.empty? %>
      <p>Não existem pousadas cadastradas</p>
    <% end %>
  <% end %>
</section>
